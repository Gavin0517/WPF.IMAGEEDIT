<Window x:Class="ImageZoom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageZoom"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Transparent"   AllowsTransparency="True">
    <Grid>
        
        <StackPanel Background="RED" Grid.Row="0" Panel.ZIndex="0">
            <Border>
            <Image Cursor="ScrollE"   Name="img" Source="elab.png" Width="200" Height="300"
      MouseWheel="Img_MouseWheel" MouseDown="Img_MouseDown" 
     MouseMove="Img_MouseMove" MouseUp="Img_MouseUp" MouseLeave="Img_MouseLeave">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="str"></ScaleTransform>
                        <TranslateTransform x:Name="tlt"></TranslateTransform>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            </Border>
        </StackPanel>

